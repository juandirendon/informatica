@model FlowersAndBushes.Models.Usuario
@{
    ViewBag.Title = "Iniciar sesión";
    Layout = "";
}
@Styles.Render("~/Content/css")
<link rel="stylesheet" href="~/Content/Estilos.css" />
<link rel="stylesheet" href="~/Content/bootstrap-datepicker.min.css" />
<script type="text/javascript" src="~/scripts/jquery-3.2.1.min.js"> </script>
<script type="text/javascript" src="~/scripts/bootstrap-datepicker.min.js"> </script>
<br />

<div class="container body-content">
    
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <h2>@ViewBag.Title.</h2>
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Cliente", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                    @Html.AntiForgeryToken()
                    <h4>Utilice una cuenta local para iniciar sesión.</h4>
                    <hr />
                    if (@ViewBag.Message != null)
                    {
                        <div class="alert alert-danger">
                            <strong>Error!</strong> @ViewBag.Message
                        </div>
                    }
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        <label class="col-md-2 control-label" for="correo">Correo</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.correo, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.correo)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label" for="contrasena">Contraseña</label>
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.contrasena, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.contrasena)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Iniciar sesión" class="btn btn-default" />
                        </div>
                    </div>
                    <p>
                        @Html.ActionLink("Registrate", "Crear") si no dispones de una cuenta local.
                    </p>
                }
            </section>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
